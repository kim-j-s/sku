                            <button class="ui button fix bg">Go to this activity</button>
                        </div>
                    </div>
                </div>
                <!--//Basic Card2-->

                <!-- Basic Card3 
                Hover시 go to my learning 버튼-->
                <div class="ui card card-h">
                    <div class="card-inner">
                        <!--썸네일-->
                        <div class="thumbnail"></div>
                        <!--//썸네일-->
                        <div class="title-area">
                            <div class="ui color purple label">AI</div>
                            <div class="header">Machine learning Complete Guide for Calculus - Deep</div>
