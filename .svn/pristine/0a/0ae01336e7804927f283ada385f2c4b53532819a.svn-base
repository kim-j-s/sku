                            <div class="ui color green label">Global</div>
                            <div class="header">Machine</div>
                        </div>
                        <div class="icon-area">
                            <div class="ui label bold onlytext"><i aria-hidden="true" class="video2 icon"></i><span>Video</span></div>
                            <div class="ui label bold onlytext"><i aria-hidden="true" class="time2 icon"></i><span>1h 30m</span></div>
                            <div class="ui label onlytext"><i aria-hidden="true" class="complete icon"></i><span>이수 3,300명</span></div>
                        </div>
                        <div class="foot-area">
                            <div class="fixed-rating s4">
                                <span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </div>
                    </div>
                    <div class="hover-content">
                        <div class="title-area">
